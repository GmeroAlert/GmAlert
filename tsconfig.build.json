{
    "extends": "./tsconfig.json",
    "compilerOptions": {
      "target": "es2020",
      "lib": ["dom", "es2020"],
      "moduleResolution": "node",
      "module": "es2015",
      "noEmit": false,
      "removeComments": false,
      "skipLibCheck": true,
      "declaration": true,
      "emitDeclarationOnly": true,
      "declarationDir": "dist/types",
      "jsx": "react-jsx",
      "allowSyntheticDefaultImports": true,
      "strict": true
    }
  }