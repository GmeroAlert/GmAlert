{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "es2020",
    "jsx": "react-jsx",
    "lib": ["dom", "es2020"],
    "module": "es2015",
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "declarationDir": "dist/types",
    "emitDeclarationOnly": true,
    "noEmit": false,
    "removeComments": false,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  }
}
